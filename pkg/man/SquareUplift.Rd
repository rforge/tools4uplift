\examples{

library(tools4uplift)
scene <- GenerateScene(plotit = FALSE)
train <- GenerateUplift(scene, nbobs = 1000, dimension = 10)

split <- SplitUplift(train, 0.5, c("treat", "y"))
train <- split[[1]]
valid <- split[[2]]

square <- SquareUplift(train, valid, "X1", "X2", "treat", "y", 
                      step = 0.3, nb.group = 5)
}
