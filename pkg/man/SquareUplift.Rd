\examples{
library(tools4uplift)
scene <- generateScene(plotit=FALSE)
data <- generateUplift(scene, 1000, 10)

split <- splitUplift(data, 0.5, c("treat", "y"))
train <- split[[1]]
valid <- split[[2]]

square <- squareUplift(train, valid, "X1", "X2", "treat", "y", 
                      step=0.3, nbGroup=5)
}
